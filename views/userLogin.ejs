<%- include("header.ejs") %>

    <div class="form-container">
        <h2 class="text-center mb-4">Login</h2>
        <form action="/login" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Email</label>
                <input type="email" id="name" name="email" class="form-control" placeholder="Enter your Email"
                    required autocomplete="off">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="Password"required>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>

            <% if (locals.error) { %>
                <p class="text-danger"><%= locals.error %></p>
            <% } %>
            
            <form action="/login" method="post">

        </form>
        <p class="mt-3 text-center">Don't have an Account? <a href="/signup">Signup</a></p>
        <p class="mt-3 text-center">Admin? <a href="/admin/login">Login here</a></p>
    </div>

