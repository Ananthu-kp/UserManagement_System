<%- include("header.ejs") %>

<div class="form-container">
    <h2 class="text-center mb-4">Signup</h2>
    <form action="/signup" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Enter your Name" required autocomplete="off">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required autocomplete="off">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
        </div>
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Confirm Password" required>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
    <p class="mt-3 text-center">Already have an account?<a href="/login">Login</a></p>
</div>

<%- include("footer.ejs") %>
